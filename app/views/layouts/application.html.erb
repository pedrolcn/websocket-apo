<!DOCTYPE html>
<html>
  <head>
    <title>WebsocketApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= action_cable_meta_tag %>
  </head>

  <body>
    <nav class='navbar navbar-expand-lg navbar-dark bg-dark'>
      <%= link_to "Home", root_path, class: 'navbar-brand'%>

      <% if controller_name == 'chat_rooms' && action_name == 'index'%>
        <button type="button" class="btn btn-outline-secondary ml-auto" data-toggle="modal" data-target="#createChatRoomModal">
          New
        </button>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
